---
###############################################################
#                   Authelia configuration                    #
###############################################################

jwt_secret: {{ jwt_secret }}
default_redirection_url: https://{{ authelia_host }}

ntp:
  disable_failure: true

server:
  host: 0.0.0.0
  port: 9091

log:
  level: debug

totp:
  issuer: authelia.com

authentication_backend:
  file:
    path: /config/users_database.yml

access_control:
  default_policy: deny
  rules:
    - domain: {{ authelia_host }}
      policy: bypass
    - domain: {{ wireguard_host }}
      policy: two_factor
{% if enable_adguard_unbound_doh %}
    - domain: {{ adguard_host }}
      policy: two_factor
{% endif %}

session:
  name: authelia_session
  secret: {{ session_secret }}
  expiration: 3600  # 1 hour
  inactivity: 300  # 5 minutes
  domain: {{ root_host }}  # Should match whatever your root protected domain is

  redis:
    host: redis
    port: 6379

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 300

storage:
  encryption_key: {{ storage_encryption_key }}
  local:
    path: /config/db.sqlite3

notifier:
  {% if email_password is defined and not 'localhost' in email_smtp_host %}
    smtp:
        username: {{ email_login }}
        password: {{ email_password }}
        sender: "Authelia <{{ email }}>"
        port: {{ email_smtp_port }}
        host: {{ email_smtp_host }}
  {% else %}
    filesystem:
        filename: /config/notification.txt
  {% endif %}
